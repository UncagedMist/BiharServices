<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffb067"
    tools:context=".RationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnFormA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/formA"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_bg"
                android:textSize="20sp" />

            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/btnFormB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/formB"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_bg"
                android:textSize="20sp" />

            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/btnStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/checkAppStatus"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_bg"
                android:textSize="20sp" />

            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/btnChkAllot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/checkRationAllot"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/button_bg" />

            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/btnDealer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dealerChallan"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/button_bg" />

            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/btnHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/officialPage"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/button_bg" />

            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/btnAadhharLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rationAadhaarLink"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/button_bg" />

            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/btnDownload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rationCardDownload"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/button_bg" />

            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/btnSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rationCardSearch"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/button_bg" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" />

</RelativeLayout>